{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block description %}Liste des catégories{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json',
                }
            });
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des catégories</h1>

    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin.category.create')}}" class="btn btn-primary shadow"><i class="fas fa-plus"></i> Nouvelle catégorie</a>
    </div>

    {% if categories|length == 0%}
        <p>Aucune catégorie existante</p>
    {% else %}
        <div class="table-responsive">
            <table id="table" class="table table-striped table-bordered table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Slug</th>
                        <th>Créée le</th>
                        <th>Modifiée le</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{category.id}}</td>
                            <td>{{category.name}}</td>
                            <td>{{category.slug}}</td>
                            <td>{{category.createdAt|date("m/d/Y")}}</td>
                            <td>{{category.updatedAt|date("m/d/Y")}}</td>
                            <td>
                                <a title="Modifier {{category.name}}"  href="{{path('admin.category.edit', {'id':category.id})}}" class="mx-2 text-secondary"><i class="fas fa-edit"></i></a>
                                <a onclick="event.preventDefault(); confirm('Confirmer la suppression?') && document.querySelector('#delete-category-{{category.id}}-form').submit();" title="Supprimer {{category.name}}" href="" class="mx-2 text-danger"><i class="fa-solid fa-trash-can"></i></a>
                                <form method="POST" action="{{path('admin.category.delete', {'id':category.id})}}" id="delete-category-{{category.id}}-form">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('delete-category'~category.id)}}">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}