{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des articles{% endblock %}

{% block description %}Liste des articles{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des articles</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin.post.create')}}" class="btn btn-primary shadow"><i class="fas fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Publié ?</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{post.id}}</td>
                        <td>
                            <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('post_thumb') }}">
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}